@model List<Movie_website.Models.Series>
@{
    var genreName = ViewBag.GenreName as string ?? "Genre";
    var genreId = ViewBag.GenreId as int? ?? 0;
    var total = ViewBag.TotalResults as int? ?? 0;
    var currentPage = ViewBag.Page as int? ?? 1;
    int pageSize = 20;
    int totalPages = (int)Math.Ceiling((double)total / pageSize);
}

<div class="container mt-5">
    <h1 class="text-white">@genreName (@total i alt)</h1>

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4 mt-3">
        @foreach (var series in Model)
        {
            <div class="col">
                <a href="/Series/Details/@series.Id" style="text-decoration: none;">
                    <img src="@series.PosterUrl" class="img-fluid rounded shadow bg-black" style="height: 300px; object-fit: contain;" alt="@series.Name" />
                    <p class="mt-2 text-white text-center" style="font-size: 0.9rem;">@series.Name</p>
                </a>
            </div>
        }
    </div>

    @if (totalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Series/Genre?id=@genreId&name=@genreName&page=@(currentPage - 1)">Forrige</a>
                    </li>
                }

                @for (int i = 1; i <= totalPages && i <= 10; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" href="/Series/Genre?id=@genreId&name=@genreName&page=@i">@i</a>
                    </li>
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="/Series/Genre?id=@genreId&name=@genreName&page=@(currentPage + 1)">Næste</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>